        %a{:href => "#"}
          .list-icon-container
            %i.icon-briefcase>
            \ 
          .list-text Lecture Notes + Exs Registration
      %li
        %a#cc-other-projects-portal{:href => "#"}
          .list-icon-container
            %i.icon-lightbulb>
            \ 
          .list-text Projects Portal
      %li.disabled
        %a{:href => "#"}
          .list-icon-container
            %i.icon-magic>
            \ 
          .list-text Special Activities
%hr
